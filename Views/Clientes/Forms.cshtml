@model Intelectah.ViewModel.ClientesViewModel

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<div class="form-group col-md-6">
    <label asp-for="Nome" class="form-label"></label>
    <input asp-for="Nome" class="form-control" placeholder="Digite o nome do cliente" />
    <span asp-validation-for="Nome" class="text-danger"></span>
</div>

<div class="form-group col-md-6">
    <label asp-for="CPF" class="form-label"></label>
    <input asp-for="CPF" class="form-control" id="cpf" placeholder="Digite o CPF" />
    <span asp-validation-for="CPF" class="text-danger" id="cpf-error"></span>
</div>

<div class="form-group col-md-6">
    <label asp-for="Email" class="form-label"></label>
    <input asp-for="Email" class="form-control" placeholder="Digite o e-mail" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>

<div class="form-group col-md-6">
    <label asp-for="Telefone" class="form-label"></label>
    <input asp-for="Telefone" class="form-control" placeholder="Digite o telefone" />
    <span asp-validation-for="Telefone" class="text-danger"></span>
</div>
