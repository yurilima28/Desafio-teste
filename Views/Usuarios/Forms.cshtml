@model Intelectah.ViewModel.UsuariosViewModel

<form asp-action="@ViewData["FormAction"]" method="post">
    @if (ViewData["FormAction"] == "Editar")
    {
        <input type="hidden" asp-for="UsuarioId" />
    }

    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="NomeUsuario" class="control-label">Nome do usuário</label>
            <input asp-for="NomeUsuario" class="form-control" placeholder="Nome completo do usuário" />
            <span asp-validation-for="NomeUsuario" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="Login" class="control-label">Login</label>
            <input asp-for="Login" class="form-control" placeholder="Nome de usuário para login" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Senha" class="control-label">Senha</label>
            <input asp-for="Senha" type="password" class="form-control" placeholder="Digite a senha" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="Email" class="control-label">E-mail</label>
            <input asp-for="Email" class="form-control" placeholder="Digite o e-mail do usuário" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="NivelAcesso" class="control-label">Cargo</label>
            <select asp-for="NivelAcesso" class="form-control">
                <option value="">Selecione um cargo</option>
                <option value="Administrador">Administrador</option>
                <option value="Vendedor">Vendedor</option>
                <option value="Gerente">Gerente</option>
            </select>
            <span asp-validation-for="NivelAcesso" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary" style="margin-top:10px">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary" style="margin-top:10px">Cancelar</a>
    </div>
</form>
