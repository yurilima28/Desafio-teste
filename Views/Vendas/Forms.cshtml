@model Intelectah.ViewModel.VendasViewModel

<div class="container">
    <form asp-action="@ViewData["FormAction"]" method="post">
        @if (ViewData["FormAction"] == "Editar")
        {
            <input type="hidden" asp-for="VendaId" />
        }

        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="ClienteID" class="form-label">Selecione o cliente</label>
                <select asp-for="ClienteID" asp-items="ViewBag.Clientes" class="form-select">
                    <option value="">Selecione um cliente</option>
                </select>
                <span asp-validation-for="ClienteID" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="DataVenda" class="form-label">Informe a data da venda</label>
                <input asp-for="DataVenda" class="form-control" type="date" />
                <span asp-validation-for="DataVenda" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="ValorTotal" class="form-label">Valor R$</label>
                <input asp-for="ValorTotal" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="ValorTotal" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="UsuarioID" class="form-label">Vendedor</label>
                <select asp-for="UsuarioID" asp-items="ViewBag.Usuarios" class="form-select">
                    <option value="">Selecione um usuário</option>
                </select>
                <span asp-validation-for="UsuarioID" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="ConcessionariaID" class="form-label">Concessionária</label>
                <select asp-for="ConcessionariaID" asp-items="ViewBag.Concessionarias" class="form-select">
                    <option value="">Selecione uma concessionária</option>
                </select>
                <span asp-validation-for="ConcessionariaID" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="FabricanteID" class="form-label">Fabricante</label>
                <select asp-for="FabricanteID" asp-items="ViewBag.Fabricantes" class="form-select" id="FabricanteID">
                    <option value="">Selecione um fabricante</option>
                </select>
                <span asp-validation-for="FabricanteID" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="VeiculoID" class="form-label">Modelo</label>
                <select asp-for="VeiculoID" class="form-select" id="VeiculoID" disabled>
                    <option value="">Selecione um modelo</option>
                </select>
                <span asp-validation-for="VeiculoID" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="ProtocoloVenda" class="form-label">Protocolo da Venda</label>
                <input asp-for="ProtocoloVenda" class="form-control" readonly />
                <span asp-validation-for="ProtocoloVenda" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary" style="margin-top:10px">Salvar</button>
            <a asp-action="Index" class="btn btn-secondary" style="margin-top:10px">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#FabricanteID').change(function () {
                var fabricanteId = $(this).val();
                var modeloSelect = $('#VeiculoID');

                if (fabricanteId) {
                    modeloSelect.prop('disabled', false);

                    $.ajax({
                        url: '@Url.Action("GetModelosPorFabricante", "Vendas")',
                        type: 'GET',
                        data: { fabricanteId: fabricanteId },
                        success: function (data) {
                            modeloSelect.empty();
                            modeloSelect.append('<option value="">Selecione um modelo</option>');
                            $.each(data, function (index, item) {
                                modeloSelect.append($('<option></option>').val(item.value).text(item.text));
                            });
                        },
                        error: function () {
                            alert('Erro ao carregar os modelos.'); 
                        }
                    });
                } else {
                    modeloSelect.prop('disabled', true);
                    modeloSelect.empty();
                    modeloSelect.append('<option value="">Selecione um modelo</option>');
                }
            });
        });
    </script>
}
